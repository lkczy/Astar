/* pages/sub_pages/hwShopDetail/hwShopDetail.wxss */

swiper {
  height: 600rpx;
}

.shop {
  font-size: 25rpx;
  width: 120rpx;
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  top: 20rpx;
  left: 20rpx;
  z-index: 999;
}

.shop image {
  width: 120rpx;
  height: 120rpx;
}

.shop text {
  margin-top: 30rpx;
}

.slide-image {
  width: 100%;
  height: 600rpx;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 15rpx 0;
}

.coupon-text {
  padding: 5rpx 20rpx;
  font-size: 25rpx;
  background-color: #f7e47d;
  border-radius: 5rpx;
  margin-left: 10rpx;
}

.price {
  font-size: 40rpx;
  margin-left: 15rpx;
}

.old-price {
  font-size: 20rpx;
  margin-left: 10rpx;
  color: #c7c7c7;
}

.desc {
  font-size: 30rpx;
  margin: 0rpx 10rpx 10rpx 10rpx;
  word-break: break-all;
}

.coupon-money {
  font-size: 20rpx;
  background-color: #f7e47d;
  text-align: center;
  padding: 0rpx 5rpx;
  border-top: 0.5rpx solid #333;
  border-left: 0.5rpx solid #333;
  border-bottom: 0.5rpx solid #333;
  margin-left: 10rpx;
}

.coupon {
  font-size: 20rpx;
  text-align: center;
  padding: 0rpx 5rpx;
  border-top: 0.5rpx solid #333;
  border-right: 0.5rpx solid #333;
  border-bottom: 0.5rpx solid #333;
  border-left: 0.5rpx dashed #333;
}

.coupon-num {
  margin-left: 20rpx;
  font-size: 20rpx;
}

.goods-desc-title {
  margin-left: 10rpx;
  font-size: 30rpx;
}

.goods-desc {
  background: #f6f6f6;
  border-radius: 5rpx;
  margin: 10rpx 10rpx 200rpx 10rpx;
  font-size: 28rpx;
  width: 710rpx;
  color: #969696;
  padding: 15rpx 10rpx;
}

.buy {
  width: 100%;
  height: 115rpx;
  background-color: #f5000c;
  position: fixed;
  bottom: 0;
  line-height: 115rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.buy-text {
  color: #ffe98f;
  font-size: 50rpx;
}

.buy-price {
  color: #fff;
  font-size: 40rpx;
  margin-right: 30rpx;
}

.red-bag {
  width: 100%;
  height: 85rpx;
  border-top: 2rpx solid #dfdfdf;
  background-color: #fff;
  position: fixed;
  bottom: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-weight: bold;
  font-size: 32rpx;
  color: #f50010;
  display: flex;
  align-items: center;
  justify-content: center;
}

.pdd {
  width: 80rpx;
  height: 80rpx;
  margin-left: 30rpx;
  border-right: 1rpx solid #e44b51;
  padding-right: 20rpx;
}