    <!-- <text class='hongbaoPric'>最高50元</text> -->
    
  </view>

    <image src='https://cdn-xyx.raink.com.cn/0_sdk_coupon/publish_v1/3.png' class='close-btn' wx:if='{{rewardShow}}' bindtap='clearTap2'> </image>
    <!-- <text class='cleartext1' wx:if='{{rewardShow}}'  catchtap='clearTap2'>放弃抽奖</text> -->
  <view class='goods-list' wx:if='{{rewardShow}}'>
    <image src='https://cdn-xyx.raink.com.cn/0_sdk_coupon/publish_v1/title1.png' class='title'></image>
    <text class='s-title'>折现券限当日使用，过期归零</text>
    <navigator wx:for='{{goodsList}}' wx:for-item='item' class='goods-item' url='/pages/sub_pages/hwShopDetail/hwShopDetail?id={{item.goods_id}}' bindtap='gotoPddShop' data-goods='{{item}}'>
      <image src='{{item.goods_thumbnail_url}}' class='goods-img'></image>
      <view class='goods-name-price-wrap'>
        <view class='goods-name'>{{item.goods_name}}</view>
        <view class='old-price'>原价 ¥ {{(item.min_group_price)/100}}</view>
        <view class='new-price'><text class='yellow-wrap'>券后价</text> ¥ {{(item.min_group_price - item.coupon_discount)/100}}</view>
        <image src='https://cdn-xyx.raink.com.cn/box_weixin/20190124102621001.png' class='baoyou'></image>
      </view>
      <view class='coupon-wrap'>
        <image src='https://cdn-xyx.raink.com.cn/0_sdk_coupon/publish_v1/4B.png' class='coupon-img'></image>
        <view class='coupon'>{{item.coupon_discount/100}}元</view>
      </view>
    </navigator>
    <image src='https://cdn-xyx.raink.com.cn/0_sdk_coupon/publish_v1/BTN.png' class='change' bindtap='changePage'></image>
    <view class='change-text' bindtap='changePage'>({{page + 1}}/4)</view>
  </view>


