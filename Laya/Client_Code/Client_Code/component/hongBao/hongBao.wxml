<view class='warp' wx:if='{{show}}'>
  <view class='main' wx:if='{{!rewardShow}}'>
    <!-- 红包背景 -->
    <image class='hongbaoBg' src='https://cdn-xyx.raink.com.cn/box_weixin/201901251443056.png'></image>

<!-- 当不需要分享时 -->
    <button open-type="share" class='choujiang' id='hongbao' wx:if='{{isShare==1&&ShareOrVideo==2}}'>
      <image class='choujiang_img' src='https://cdn-xyx.raink.com.cn/box_weixin/201901251439369.png'></image>
    </button>
     <button  class='choujiang' bind:tap="playvideo" id='hongbao' wx:if='{{isShare==1&&(ShareOrVideo==1||ShareOrVideo==3)}}'>
      <image class='choujiang_img' src='https://cdn-xyx.raink.com.cn/box_weixin/201901251439369.png'></image>
      <image class='videoicon' model='widthfix' src='https://cdn-xyx.raink.com.cn/dyjl/20190701001.png'></image>
    </button>

<!-- 不需要分享即可打开 -->
<button class='choujiang' catchtap='openReward' wx:if='{{isShare!=1}}'>
      <image class='choujiang_img' src='https://cdn-xyx.raink.com.cn/box_weixin/201901251439369.png'></image>
    </button>
 

    <view class='xingyun'>
      <image class='xingyun_img' src='./2.png'></image>
      <text class='xingyun_text'>x1</text>
    </view>
    <text class='zuigao'>最高1000元</text>
    <!-- 关闭按钮 -->
    <image class='clearIcon' src='./1.png' catchtap='clearTap'></image>
    <!-- <text class='cleartext'  catchtap='clearTap'>放弃抽奖</text> -->
    <!-- 恭喜字样 -->
