.cover-box {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 20rpx;
  color: white;
  font-size: 30rpx;
}

.cover-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.cover-timer {
  box-sizing: border-box;
  height: 60rpx;
  width: 200rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 30rpx;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.cover-control {
  box-sizing: border-box;
  height: 60rpx;
  width: 280rpx;
  padding: 0 30rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.5);
  border-radius: 30rpx;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.cover-sound {
  width: 35rpx;
  height: 35rpx;
}

.cover-line {
  height: 40rpx;
  width: 1rpx;
  margin: 0 20rpx;
}

.cover-footer {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  width: 710rpx;
  overflow: hidden;
  background: #a5d79b;
  border-radius: 15rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.cover-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 15rpx;
  margin: 15rpx;
}

.cover-title {
  height: 70rpx;
  line-height: 70rpx;
  font-weight: 700;
  font-size: 40rpx;
}

.cover-desc {
  font-size: 30rpx;
  white-space: normal;
  margin-bottom: 10rpx;
}

.cover-btn {
  height: 70rpx;
  width: 150rpx;
  background: #8abe7f;
  border-radius: 35rpx;
  margin-right: 20rpx;
  overflow: hidden;
  color: white;
  font-size: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
