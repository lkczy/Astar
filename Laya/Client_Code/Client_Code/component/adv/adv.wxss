/* icon */

@keyframes shake {
  0% {
    transform: rotate(0deg);
  }

  3% {
    transform: rotate(-20deg);
  }

  6% {
    transform: rotate(20deg);
  }

  9% {
    transform: rotate(-20deg);
  }

  12% {
    transform: rotate(0deg);
  }
}

.adv-icon {
  display: block;
  width: 100%;
  animation: shake 4s ease-in infinite;
}

/* banner */

.adv-banner {
  position: relative;
  z-index: 9999;
  width: 100%;
}

.adv-banner image {
  width: 100%;
}

