<!-- 纵向详细列表 -->
<block wx:if='{{listType=="detail"}}'>
  <view class='more-title'>
    <image src='xiantiao.jpg' mode='widthFix' class='line'></image>
    <image src='fangkuai.png' mode='widthFix' class='fangkuai'></image>
    <text>以下更多游戏推荐</text>
    <image src='fangkuai.png' mode='widthFix' class='fangkuai'></image>
    <image src='xiantiao.jpg' mode='widthFix' class='line'></image>
  </view>
  <view wx:for="{{suggestList}}" class="more_list" bindtap='tapApp' data-idx='{{index}}'>
    <image class='icon' src='{{item.image}}'></image>
    <view style='flex: 1'>
      <view class='text_title'>{{item.title}}</view>
      <view class='text_desc'>{{item.description}}</view>
    </view>
    <view>
      <text class='play_btn'>{{item.button}}</text>
      <view class='text_get' wx:if="{{!item.clickeds}}">领{{item.coins}}金币</view>
      <view class='text_get' wx:if="{{item.clickeds}}">换种玩法</view>
    </view>
  </view>
</block>
<!-- 横向ICON列表 -->
<block wx:if='{{listType=="icononly"}}'>
  <view class='more-title'>
    <image src='title.png' mode='widthFix' class='bar'></image>
  </view>
  <view class='more-icononly'>
    <view wx:for="{{suggestList}}" class='more-icons' bindtap='tapApp' data-idx='{{index}}'>
      <image class='icon' src='{{item.image}}'></image>
      <!-- <view class='reward' wx:if="{{!item.clickeds}}">
        +{{item.coins}}
        <image style='width:30rpx;height:30rpx;margin-left:3rpx;' src='gold1.png'></image>
      </view> -->
      <view class='reward' wx:if="{{item.clickeds}}">{{item.button}}</view>
    </view>
  </view>
</block>